<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <EditText android:id="@+id/write_numberEdit" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789;"
            android:lines="1"
            android:layout_weight="1"
            android:hint="전화번호 혹은 주소록"
            />
        <Button android:id="@+id/write_contactsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소록"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_weight="1">
            <EditText android:id="@+id/write_contentEdit" android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                />
            <ImageButton android:id="@+id/write_voiceBtn"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_speak_now"/>


        </LinearLayout>
        <ImageButton android:id="@+id/write_sendBtn"
            android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:src="@drawable/message_option_msg_send"/>
    </LinearLayout>
</LinearLayout>
